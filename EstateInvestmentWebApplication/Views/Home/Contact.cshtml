@{
    ViewData["Title"] = "Liên hệ";
}

<div class="site-blocks-cover inner-page-cover overlay" style="background-image: url(../images/hero_bg_2.jpg);" data-aos="fade" data-stellar-background-ratio="0.5">
    <div class="container">
        <div class="row align-items-center justify-content-center text-center">
            <div class="col-md-10">
                <h1 class="mb-2">Thông tin liên hệ</h1>
                <div><a href="@Url.Action("Index", "Home")">Trang chủ</a> <span class="mx-2 text-white">&bullet;</span> <strong class="text-white">Liên hệ</strong></div>
            </div>
        </div>
    </div>
</div>

<div class="site-section">
    <div class="container">
        <div class="row">

            <div class="col-md-12 col-lg-8 mb-5">



                <form id="formConsultationContact" class="p-5 bg-white border">

                    <div class="row form-group required-field">
                        <div class="col-md-12 mb-3 mb-md-0">
                            <label class="font-weight-bold" for="fullname">Họ và tên:</label>
                            <input type="text" id="UserNameConsultationContact" name="UserName" class="form-control" placeholder="Mời nhập họ và tên">
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-md-12">
                            <label class="font-weight-bold" for="email">Địa chỉ email:</label>
                            <input type="email" id="UserEmailConsultationContact" name="UserEmail" class="form-control" placeholder="Mời nhập địa chỉ email">
                        </div>
                    </div>
                    <div class="row form-group required-field"">
                        <div class="col-md-12">
                            <label class="font-weight-bold" for="phone">Số điện thoại:</label>
                            <input type="text" id="PhoneNumberConsultationContact" name="PhoneNumber" class="form-control" placeholder="Mời nhập số điện thoại">
                        </div>
                    </div>


                    <div class="row form-group required-field"">
                        <div class="col-md-12">
                            <label class="font-weight-bold" for="message">Thông tin cần tư vấn:</label>
                            <textarea id="ContentConsultationContact" name="Content" cols="30" rows="5" class="form-control" placeholder="Mời nhập thông tin cần tư vấn"></textarea>
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col-md-12">
                            <input id="btnSubmitConsultationContact" type="submit" value="Gửi thông tin" class="btn btn-primary py-2 px-4">
                        </div>
                    </div>


                </form>
            </div>

            <div class="col-lg-4">
                <div class="p-4 mb-3 bg-white">
                    <h3 class="h6 text-black mb-3 text-uppercase">Thông tin liên hệ</h3>
                    <p class="mb-0 font-weight-bold">Địa chỉ</p>
                    <p class="mb-4">203 Fake St. Mountain View, San Francisco, California, USA</p>

                    <p class="mb-0 font-weight-bold">Số điện thoại</p>
                    <p class="mb-4"><a href="#">+1 232 3235 324</a></p>

                    <p class="mb-0 font-weight-bold">Địa chỉ email</p>
                    <p class="mb-0"><a href="#">youremail@domain.com</a></p>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
        //Begin Submit Consultation
        document.getElementById("formConsultationContact").addEventListener('submit', (e) => {
            const formData = new FormData(e.target);
            $("btnSubmitConsultationContact").prop('disabled', true);
            $.ajax({
                url: "@Url.Action("CreateConsultation","Consultation")",
                contentType: false,
                type: "post",
                processData: false,
                data: formData
            }).done(function (data) {
                $("btnSubmitConsultationContact").prop('disabled', false);

                if (data.status == "success") {
                    alert(data.message);
                    ClearFormConsultationContact();
                } else {
                    alert(data.message);

                }
            })

            e.preventDefault()
        });
</script>